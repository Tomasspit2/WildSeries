{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categories</h1>

    <ul>
        {% for category in category %}
            <li>
                {{ category.name }} - <a href="{{ path('category_show', {'categoryName': category.name}) }}">View Category</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}